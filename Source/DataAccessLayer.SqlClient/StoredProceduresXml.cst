				<% } %>
				  from PageIndex
				 where RowIndex > {2}
				   and RowIndex <= {3};
				
				<% } else { // SQL 2000 %>
				-- Create a temp table to store the select results
				Create Table #PageIndex
				(
				    [IndexId] int IDENTITY (1, 1) NOT NULL,
				    <%= GetPagedHelper(SourceTable.PrimaryKey.MemberColumns) %> 
				)
				
