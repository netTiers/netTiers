<%	if (CacheDatabases) { %>
		#region "Database Caching Functions"

		#region "ClearDatabaseCache"
		/// <summary>
		/// Clears the cached DB handles - cached in GetDatabase( )
		/// </summary>
	        public void ClearDatabaseCache()
	        {
	            Hashtable databaseCache = (Hashtable)AppDomain.CurrentDomain.GetData("netTiersDatabaseCache");
	            if (databaseCache != null)
	            {
	                databaseCache.Clear();
	            }
	        }

		#endregion

		#region "GetDatabase"
		/// <summary>
		/// Inits and caches DB handles to improve performance - especially at high CPU/Memory usage rates - use ClearDatabaseCache( ) to clear the cache
		/// </summary>
		/// <param name="connectionString"></param>
	        public SqlDatabase GetDatabase(string connectionString)
	        {
	            Hashtable databaseCache = (Hashtable)AppDomain.CurrentDomain.GetData("netTiersDatabaseCache");
	            if (databaseCache == null)
	            {
	                databaseCache = new Hashtable();
	                AppDomain.CurrentDomain.SetData("netTiersDatabaseCache", databaseCache);
	            }
	
	            SqlDatabase database = (SqlDatabase)databaseCache[connectionString];
	            if (database == null)
	            {
	                database = new SqlDatabase(connectionString);
	                databaseCache[connectionString] = database;
	            }
	
	            return database;
	        }

		#endregion

		#endregion
<% 	} else { %>

		#region "GetDatabase"
	        public SqlDatabase GetDatabase(string connectionString)
		{
			return new SqlDatabase(connectionString);
		}
		#endregion

<% 	} // if (CacheDatabases) %>

