		#region GetBindableProperties

		/// <summary>
		/// Get the collection of properties that have been marked as Bindable
		/// Use ClearPropertyCache( ) to refresh (ex: when an assembly that contains the type is updated)
		/// </summary>
		/// <param name="type">The type of the object to get the properties for.</param>
		/// <returns><see cref="PropertyDescriptorCollection"/> of bindable properties.</returns>
		public static PropertyDescriptorCollection GetBindableProperties(Type type)
		{
			Hashtable propertyCache = (Hashtable)AppDomain.CurrentDomain.GetData("netTiersTypePropertyCache");
			if (propertyCache == null)
			{
				propertyCache = new Hashtable();
				AppDomain.CurrentDomain.SetData("netTiersTypePropertyCache", propertyCache);
			}
	
			string cachedList = "BindableProperties:" + type.FullName;
			PropertyDescriptorCollection propertyDescriptors = (PropertyDescriptorCollection)propertyCache[cachedList];
			if (propertyDescriptors == null)
			{
				// create a filter so we only return the properties that have been designated as bindable
				Attribute[] attrs = new Attribute[] { new BindableAttribute() };
		
				propertyDescriptors = TypeDescriptor.GetProperties(type, attrs);
				propertyCache[cachedList] = propertyDescriptors;
			}
			return propertyDescriptors;
		}
