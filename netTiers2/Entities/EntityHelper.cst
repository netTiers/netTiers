		#region ClearPropertyCache
	      /// <summary>
	      /// Clear cached property and field information for object types (originally collected in GetAllProperties, GetAllFields and GetBindableProperties
	      /// </summary>
	        public static void ClearPropertyCache()
	        {
	            Hashtable propertyCache = (Hashtable)AppDomain.CurrentDomain.GetData("netTiersTypePropertyCache");
	            if (propertyCache != null)
	            {
	                propertyCache.Clear();
	            }
	        }
		#endregion 
		
		#region GetAllProperties
	      /// <summary>
	      /// Get the collection of properties for a given type - not just the bindable ones. Cache the result so as not to balloon memory in time-critical apps.
	      /// Use ClearPropertyCache( ) to refresh (ex: when an assembly that contains the type is updated)
	      /// </summary>
	      /// <param name="type">The type of the object to get the properties for.</param>
	      /// <returns><see cref="PropertyInfo"/> array of properties.</returns>
	        public static PropertyInfo[] GetAllProperties(Type type)
	        {
	            Hashtable propertyCache = (Hashtable)AppDomain.CurrentDomain.GetData("netTiersTypePropertyCache");
	            if (propertyCache == null)
	            {
	                propertyCache = new Hashtable();
	                AppDomain.CurrentDomain.SetData("netTiersTypePropertyCache", propertyCache);
	            }
	
	            string cachedList = "AllPropertyList:" + type.FullName;
	            PropertyInfo[] pi = (PropertyInfo[])propertyCache[cachedList];
	            if (pi == null || pi.Length == 0)
	            {
	                pi = type.GetProperties();
	                propertyCache[cachedList] = pi;
	            }
	
	            return pi;
	        }
		#endregion 
		
