		public abstract <%=returnType%> <%=methodName%>(TransactionManager transactionManager, int start, int pageLength <%=TransformStoredProcedureInputsToMethod(true, command.InputParameters)%>);
		
		#endregion
<%
		}	//end foreach command
%>
		
		#endregion
	<% } %>
	
